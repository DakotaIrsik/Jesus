# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.ts text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.py text eol=lf
*.pyi text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Terraform
*.tf text eol=lf
*.tfvars text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Shell scripts (must be executable on Unix)
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
